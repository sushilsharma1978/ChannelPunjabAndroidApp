<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/orange"
    android:weightSum="3"
    android:layout_height="match_parent"
    tools:context=".ContactusActivity">

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"

        android:layout_height="0dp"
        android:layout_weight="0.4">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="90dp"
            android:src="@drawable/punjabi_hub"
            />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="30dp"
        android:orientation="vertical"
        android:layout_marginRight="30dp"
        android:background="@drawable/border"
        android:layout_height="0dp"
        android:layout_weight="1.75">

        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:text="HEAD OFFICE"
            android:textStyle="bold"
            android:textSize="18dp"
            android:justificationMode="inter_word"
            android:fontFamily="sans-serif"
            android:textColor="@android:color/white"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:text="@string/contactus_txt"
            android:textStyle="italic"
            android:textSize="18dp"
            android:justificationMode="inter_word"
            android:fontFamily="sans-serif-black"
            android:textColor="@android:color/white"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="3dp"
            android:text="Contact No: +44-7769308019"
            android:textSize="18dp"
            android:justificationMode="inter_word"
            android:fontFamily="sans-serif"
            android:textColor="@android:color/white"
            android:layout_marginLeft="18dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:text="USA OFFICE"
            android:textStyle="bold"
            android:textSize="18dp"
            android:justificationMode="inter_word"
            android:fontFamily="sans-serif"
            android:textColor="@android:color/white"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:text="@string/contactus_txt2"
            android:textStyle="italic"
            android:textSize="18dp"
            android:justificationMode="inter_word"
            android:fontFamily="sans-serif-black"
            android:textColor="@android:color/white"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="3dp"
            android:text="Contact No: 7187856131"
            android:textSize="18dp"
            android:justificationMode="inter_word"
            android:fontFamily="sans-serif"
            android:textColor="@android:color/white"
            android:layout_marginLeft="18dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:text="banthothi@gmail.com"
            android:textSize="18dp"
            android:layout_marginTop="1dp"
            android:justificationMode="inter_word"
            android:fontFamily="sans-serif"
            android:textColor="@android:color/white"
            android:layout_marginLeft="18dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"/>

</LinearLayout>